<% layout('layouts/boilerplate') %>

<style>
    .login-container {
        min-height: 80vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 40px 20px;
    }
    
    .login-card {
        background: white;
        border-radius: 20px;
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
        padding: 50px 40px;
        width: 100%;
        max-width: 450px;
        transition: all 0.3s ease;
    }
    
    .login-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 15px 50px rgba(0, 0, 0, 0.15);
    }
    
    .login-title {
        color: #FF5A5F;
        font-size: 2rem;
        font-weight: 700;
        text-align: center;
        margin-bottom: 10px;
    }
    
    .login-subtitle {
        text-align: center;
        color: #666;
        margin-bottom: 30px;
    }
    
    .login-icon {
        text-align: center;
        margin-bottom: 25px;
    }
    
    .login-icon i {
        color: #FF5A5F;
    }
    
    .input-group-custom {
        position: relative;
        margin-bottom: 25px;
    }
    
    .input-icon {
        position: absolute;
        left: 15px;
        top: 50%;
        transform: translateY(-50%);
        color: #999;
        z-index: 10;
    }
    
    .input-with-icon {
        padding-left: 45px !important;
        border-radius: 12px;
        border: 2px solid #e0e0e0;
        height: 50px;
        transition: all 0.3s ease;
    }
    
    .input-with-icon:focus {
        border-color: #FF5A5F;
        box-shadow: 0 0 0 0.2rem rgba(255, 90, 95, 0.15);
    }
    
    .btn-login {
        background: #FF5A5F;
        color: white;
        border: none;
        border-radius: 12px;
        padding: 14px;
        font-size: 1.1rem;
        font-weight: 600;
        width: 100%;
        margin-top: 20px;
        transition: all 0.3s ease;
    }
    
    .btn-login:hover {
        background: #ff4147;
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(255, 90, 95, 0.3);
        color: white;
    }
    
    .signup-link {
        text-align: center;
        margin-top: 25px;
        color: #666;
    }
    
    .signup-link a {
        color: #FF5A5F;
        font-weight: 600;
        text-decoration: none !important;
        transition: all 0.3s ease;
    }
    
    .signup-link a:hover {
        color: #db0e15;
        text-decoration: underline;
    }
    
    .remember-me {
        margin: 20px 0;
    }
    
    .remember-me label {
        color: #666;
        font-size: 0.95rem;
        cursor: pointer;
    }
    
    @media (max-width: 576px) {
        .login-card {
            padding: 40px 25px;
        }
        
        .login-title {
            font-size: 1.6rem;
        }
    }
</style>

<div class="login-container">
    <div class="login-card">
        <div class="login-icon">
            <i class="fa-solid fa-right-to-bracket fa-3x"></i>
        </div>
        
        <h1 class="login-title">Welcome Back</h1>
        <p class="login-subtitle">Login to continue your adventure</p>
        
        <form action="/login" method="POST" novalidate class="needs-validation">
            <div class="input-group-custom">
                <i class="fa-solid fa-user input-icon"></i>
                <input 
                    type="text" 
                    name="username" 
                    class="form-control form-control-lg input-with-icon" 
                    placeholder="Username"
                    required
                />
                <div class="invalid-feedback">
                    Please enter your username.
                </div>
            </div>
            
            <div class="input-group-custom">
                <i class="fa-solid fa-lock input-icon"></i>
                <input 
                    type="password" 
                    name="password" 
                    class="form-control form-control-lg input-with-icon" 
                    placeholder="Password"
                    required
                />
                <div class="invalid-feedback">
                    Please enter your password.
                </div>
            </div>
            
            <div class="form-check remember-me">
                <input class="form-check-input" type="checkbox" id="rememberMe">
                <label class="form-check-label" for="rememberMe">
                    Remember me
                </label>
            </div>
            
            <button type="submit" class="btn btn-login">
                <i class="fa-solid fa-arrow-right-to-bracket me-2"></i>
                Login
            </button>
            
            <div class="signup-link">
                Don't have an account? <a href="/register">Sign up here</a>
            </div>
        </form>
    </div>
</div>

<!-- Link FontAwesome -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
